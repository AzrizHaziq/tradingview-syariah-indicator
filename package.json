{
  "name": "tradingview-syariah-indicator",
  "version": "0.0.0",
  "description": "Display small shariah indicator to stock list in tradingview(MY)",
  "private": true,
  "engines": {
    "node": "15.12.0"
  },
  "scripts": {
    "start": "lerna run --scope @app/extension --stream watch",
    "c": "lerna run --scope @app/extension --stream watch:c",
    "ff": "lerna run --scope @app/extension --stream watch:ff",
    "build": "lerna run --scope @app/extension --stream build",
    "update-data": "lerna run --scope @app/data --stream update-data",
    "ghAction": "lerna run --scope @app/data --stream ghAction",
    "lint": "eslint '*/**/*.{js,jsx,ts,tsx}' --quiet --fix",
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "keywords": [
    "Syariah Stock in Malaysia",
    "Malaysia",
    "Stock",
    "Bursa Malaysia"
  ],
  "author": "Azriz Haziq <azrizhaziq@gmail.com> (https://azrizhaziq.github.io/portfolio)",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
