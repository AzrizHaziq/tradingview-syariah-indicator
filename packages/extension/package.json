{
  "name": "@app/extension",
  "version": "2.0.0",
  "description": "Display small shariah indicator to stock list in Tradingview(MY)",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch",
    "watch:ff": "web-ext run",
    "watch:c": "yarn watch:ff --target=chromium",
    "test": "yarn build",
    "build": "NODE_ENV=production webpack --mode=production",
    "build:BA": "ENABLE_BA=true yarn build",
    "postbuild": "web-ext lint",
    "prerelease": "yarn build && dotenv -e .env.production",
    "release:chrome": "yarn prerelease webstore upload --source dist",
    "release:ff": "yarn prerelease web-ext-submit && ts-node scripts/ff-source-code.ts"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "solid-js": "^1.1.1",
    "webextension-polyfill-ts": "^0.25.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@types/chrome": "0.0.144",
    "@types/copy-webpack-plugin": "^8.0.0",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.1.0",
    "babel-preset-solid": "^1.0.0",
    "chrome-webstore-upload-cli": "^1.2.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.0",
    "css-loader": "^5.2.4",
    "dot-json": "^1.2.0",
    "dotenv-cli": "^4.0.0",
    "dotenv-webpack": "^7.0.2",
    "esbuild-loader": "^2.13.1",
    "eslint": "^7.25.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.0.8",
    "glob-fs": "^0.1.7",
    "html-webpack-plugin": "^5.3.1",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.5.0",
    "postcss": "^8.2.12",
    "postcss-import": "^14.0.1",
    "postcss-loader": "^5.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "sass": "^1.38.0",
    "sass-loader": "^12.0.0",
    "size-plugin": "^2.0.1",
    "source-map-loader": "^3.0.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.0",
    "tailwindcss": "^2.1.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "web-ext": "^6.1.0",
    "web-ext-submit": "^6.1.0",
    "webpack": "^5.35.1",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^4.6.0"
  }
}
