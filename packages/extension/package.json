{
  "name": "@app/extension",
  "version": "2.3.0",
  "homepage": "https://tsi.azrizhaziq.com",
  "description": "Display small shariah indicator to stock list in Tradingview(Malaysia, China, Indonesia, US)",
  "bugs": {
    "url": "https://github.com/AzrizHaziq/tradingview-syariah-indicator/issues",
    "email": "azrizhaziq@gmail.com"
  },
  "private": true,
  "scripts": {
    "start:firefox": "NODE_OPTIONS='--loader tsx' BROWSER=firefox webpack --mode=development --watch",
    "build:firefox": "BROWSER=firefox npm run build",
    "start:chrome": "NODE_OPTIONS='--loader tsx' BROWSER=chrome webpack --mode=development --watch",
    "build:chrome": "BROWSER=chrome npm run build",
    "build": "NODE_OPTIONS='--loader tsx' NODE_ENV=production webpack --mode=production",
    "build:BA": "ENABLE_BA=true npm run build",
    "build:all": "npm run build:firefox && npm run build:chrome || true && yarn generate-ff-doc",
    "generate-ff-doc": "tsx  --tsconfig ./tsconfig.json firefox-source-code.mts",
    "lint": "eslint --fix .",
    "test": "playwright test --config=playwright.config.ts"
  },
  "license": "MIT",
  "dependencies": {
    "date-fns": "^2.29.1",
    "solid-js": "^1.4.8"
  },
  "peerDependencies": {
    "@types/download": "8.0.1",
    "@types/node": "^17.0.5",
    "body-parser": "1.19.1",
    "download": "8.0.0",
    "express": "4.17.2",
    "safe-compare": "1.1.4"
  },
  "devDependencies": {
    "@app/shared": "workspace:*",
    "@babel/core": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@playwright/test": "^1.24.2",
    "@types/download": "8.0.1",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/node": "^18.6.4",
    "@types/webextension-polyfill": "^0.9.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "babel-preset-solid": "^1.4.8",
    "body-parser": "1.19.1",
    "chrome-webstore-upload-cli": "^2.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
