{
  "name": "@app/extension",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "npm run build && xo",
    "build": "NODE_ENV=production webpack --mode=production",
    "watch": "webpack --mode=development --watch",
    "release:chrome": "cd dist && webstore upload --auto-publish",
    "release:firefox": "cd dist && web-ext-submit",
    "watch:ff": "web-ext run -s dist",
    "watch:c": "npm run watch:ff -- --target=chromium",
    "start": "web-ext run --start-url https://tradingview.com/symbols/MYX-k1/ about:debugging#/runtime/this-firefox",
    "start:chrome": "web-ext run --target chromium --start-url https://tradingview.com/symbols/MYX-k1",
    "prebuilda": "node script/build-prod.js",
    "builda": "web-ext --config=config/web-ext-prod.cjs --source-dir=temp-dist build",
    "postbuilda": "rimraf temp-dist/"
  },
  "dependencies": {
    "copy-webpack-plugin": "^7.0.0",
    "element-ready": "^5.0.0",
    "select-dom": "^7.1.0",
    "size-plugin": "^2.0.1",
    "webext-base-css": "^1.3.1",
    "webext-domain-permission-toggle": "^2.0.0",
    "webext-dynamic-content-scripts": "^7.0.0",
    "webext-options-sync": "^2.0.1",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.8.3",
    "@sindresorhus/tsconfig": "^0.9.0",
    "@tailwindcss/jit": "^0.1.5",
    "@types/chrome": "0.0.133",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/terser-webpack-plugin": "^5.0.2",
    "babel-loader": "^8.2.2",
    "chrome-webstore-upload-cli": "^1.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.1.3",
    "daily-version": "^2.0.0",
    "dot-json": "^1.2.0",
    "dotenv-webpack": "^7.0.2",
    "eslint": "^7.18.0",
    "eslint-config-xo-react": "^0.24.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "sass-loader": "^11.0.1",
    "size-plugin": "^2.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.9.0",
    "stylelint-config-xo": "^0.20.0",
    "tailwindcss": "^2.0.4",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "web-ext": "^6.0.0",
    "web-ext-submit": "^6.0.0",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "xo": "^0.38.2"
  },
  "engines": {
    "node": "15.12.0"
  },
  "webExt": {
    "sourceDir": "dist",
    "run": {
      "startUrl": [
        "https://www.tradingview.com/symbols/MYX-PTRANS/"
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-xo"
  },
  "xo": {
    "extends": "xo-react",
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "import/no-unassigned-import": "off"
    },
    "settings": {
      "react": {
        "version": "16.13"
      }
    },
    "ignores": [
      "dist"
    ]
  }
}
