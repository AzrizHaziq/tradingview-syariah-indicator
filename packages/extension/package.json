{
  "name": "@app/extension",
  "version": "2.0.0",
  "description": "Display small shariah indicator to stock list in Tradingview(MY)",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch",
    "watch:ff": "web-ext run",
    "watch:c": "yarn watch:ff --target=chromium",
    "test": "npm run build",
    "build": "NODE_ENV=production webpack --mode=production",
    "build:2": "ENABLE_BA=true yarn build",
    "postbuild": "web-ext lint",
    "release:chrome": "cd dist && webstore upload --auto-publish",
    "release:firefox": "cd dist && web-ext-submit"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "webextension-polyfill-ts": "^0.25.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.8.3",
    "@types/chrome": "0.0.133",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/terser-webpack-plugin": "^5.0.2",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "chrome-webstore-upload-cli": "^1.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.1.3",
    "dot-json": "^1.2.0",
    "dotenv-webpack": "^7.0.2",
    "eslint": "^7.18.0",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.3.9",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.8",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^5.2.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^11.0.1",
    "size-plugin": "^2.0.1",
    "source-map-loader": "^2.0.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.9.0",
    "tailwindcss": "^2.0.4",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "web-ext": "^6.0.0",
    "web-ext-submit": "^6.0.0",
    "webpack": "^5.17.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.4.0"
  },
  "engines": {
    "node": "15.12.0"
  }
}
