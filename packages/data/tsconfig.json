{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "ESNext",
    "module": "ES2022",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
  },
  "include": [
    "./scripts/**/*",
    "global.d.ts"
  ]
}
